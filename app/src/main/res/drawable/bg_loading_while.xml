<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:pivotX="50.0%"
    android:pivotY="50.0%"
    android:fromDegrees="0.0"
    android:toDegrees="360.0">

    <shape
        android:shape="ring"
        android:useLevel="false"
        android:thickness="@dimen/dp_2">
        <gradient
            android:centerY="0.5"
            android:endColor="@color/color_while"
            android:startColor="@color/bg_transparent"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>