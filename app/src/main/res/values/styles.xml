<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/holike_app</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>


    <style name="MyTextViewStyle">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="divider_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/bg_divider</item>
    </style>

    <style name="divider_vertical">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bg_divider</item>
    </style>

    <style name="llmain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/color_while</item>
    </style>

    <style name="et_enter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:background">@drawable/bg_et_enter</item>
        <item name="android:textSize">@dimen/textSize_14</item>
        <item name="android:textColor">@color/textColor3</item>
        <item name="android:textColorHint">@color/textColor2</item>
    </style>

    <style name="btn_submit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textSize_18</item>
        <item name="android:textColor">@color/textColor1</item>
        <item name="android:background">@drawable/bg_btn_red</item>
        <item name="android:layout_marginTop">@dimen/dp_30</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:backgroundDimAmount">0.8</item>
        <!-- 第一个是dialog的背景色，当然你可以设置图片，不拦大家 -->
        <item name="android:background">@color/bg_transparent</item>
        <!-- 第二个就是弹出dialog后，下面的activity层的颜色啦-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--这里设置为没有标题栏，如果这里不设置的话，你会发现无论布局怎么改都会出现多一栏白色 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item><!--边框-->
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="switchMinWidth">@dimen/dp_46</item>
        <item name="android:thumb">@drawable/switch_custom_thumb_selector</item>
        <item name="track">@drawable/switch_custom_track_selector</item>
    </style>
</resources>
