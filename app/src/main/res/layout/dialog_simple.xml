<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:gravity="center"
    android:paddingBottom="@dimen/dp_20"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_simple_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor5"
        android:textSize="@dimen/textSize_18"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_dialog_simple_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:gravity="center"
        android:layout_below="@id/tv_dialog_simple_title"
        android:layout_centerHorizontal="true"
        android:textColor="@color/textColor6"
        android:textSize="@dimen/textSize_14" />

    <LinearLayout
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_below="@id/tv_dialog_simple_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_dialog_simple_left"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:textSize="@dimen/textSize_16"
            android:layout_weight="1"
            android:textColor="@color/textColor5"
            android:background="@drawable/bg_btn_dialog_exit_exam_exit"
            android:gravity="center" />

        <TextView
            android:id="@+id/btn_dialog_simple_right"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_20"
            android:textSize="@dimen/textSize_16"
            android:textColor="@color/color_while"
            android:background="@drawable/bg_btn_red"
            android:gravity="center" />

    </LinearLayout>
</LinearLayout>